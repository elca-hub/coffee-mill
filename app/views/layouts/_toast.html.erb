<div class="
  toast
  align-items-center
  text-<%= is_danger ? 'bg-danger' : 'bg-success' %>
  border-0
  show
" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body <%= is_danger ? 'bg-danger' : 'bg-success' %>">
      <%= content %>
    </div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>